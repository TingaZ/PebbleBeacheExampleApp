<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="a1.admin.pebblebeacheexampleapp.MainActivity">

    <ImageView
        android:id="@+id/photo"
        android:src="@drawable/Goku"
        android:layout_width="56dp"
        android:layout_height="56dp"
        />
    
    <TextView
        
        android:id="@+id/beach_text_view"
        android:text="Pebble Beach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/photo"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:textAppearanceMedium"
         />

    <TextView
        android:id="@+id/california"
        android:text="calfornia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/photo"
        android:layout_below="@id/beach_text_view"
        android:textAppearance="?android:textAppearanceSmall"
        />

    <TextView
        android:text="10 Miles Away"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/photo"
        android:layout_below="@id/california"
        android:textAppearance="?android:textAppearanceSmall"
        />
</RelativeLayout>
